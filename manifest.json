{
  "manifest_version": 3,
  "name": "Squiz Matrix Asset ID Copier",
  "description": "Quickly copy asset IDs from the Squiz Matrix admin panel using customizable keyboard shortcuts.",
  "version": "1.1",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "management"],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*_admin*", "*://*/*/_admin*", "*://*/_admin*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Copy Squiz Matrix Asset ID",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  // "privacy_policy_url": "https://your-website.com/privacy-policy"
}

