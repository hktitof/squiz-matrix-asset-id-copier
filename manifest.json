{
  "manifest_version": 3,
  "name": "Squiz Matrix Asset ID Copier",
  "description": "Quickly copy asset IDs from the Squiz Matrix admin panel using a keyboard shortcut.",
  "version": "1.0",
  "permissions": ["scripting"],
  "optional_host_permissions": ["*://*/*_admin*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*_admin*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Copy Squiz Matrix Asset ID"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
